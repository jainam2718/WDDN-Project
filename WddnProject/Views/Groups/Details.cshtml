@model WDDNProject.Models.Group

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppUser.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GroupMember)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupMember.id)
        </dd>
    </dl>
</div>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GroupMember.AppUserGroupMembers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppUser.Email)
                </td>
                <td>
                    <a href="~/AppUserGroupMembers/Delete?appUserId=@item.AppUserId&groupMemberId=@Model.GroupMemberId">Delete</a>
                </td>
            </tr>
}
    </tbody>
</table>
<br />
<br />
<a class="btn btn-primary" href="~/AppUserGroupMembers/Create?groupMemberId=@Model.GroupMemberId">Add Student</a>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
